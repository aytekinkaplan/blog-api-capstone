<div class="bg-white shadow-md rounded-lg p-6 space-y-6">
  <% if (posts.length > 0) { %> <% posts.forEach(function(post) { %>
  <article class="space-y-4">
    <h2 class="text-2xl font-bold mb-2">
      <a href="/post/<%= post.slug %>" class="hover:text-blue-600">
        <%= post.title %>
      </a>
    </h2>
    <p class="text-gray-700 mb-4"><%= post.excerpt %></p>
    <div class="flex items-center justify-between text-gray-500 text-xs">
      <span>By <%= post.author %></span>
      <span><%= post.date %></span>
    </div>
    <a href="/post/<%= post.slug %>" class="text-blue-600 hover:underline"
      >Read more</a
    >
    <div class="mt-2">
      <% post.categories.forEach(function(category) { %>
      <a
        href="/category/<%= category.slug %>"
        class="inline-block bg-gray-200 text-gray-700 text-xs font-semibold px-2 py-1 rounded-full hover:bg-gray-300 mr-2"
      >
        <%= category.name %>
      </a>
      <% }); %>
    </div>
  </article>
  <% }); %> <% } else { %>
  <p class="text-center text-gray-500">No posts found.</p>
  <% } %>
</div>
