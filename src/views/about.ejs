<%- include('partials/header', {title: 'Hakkımızda - My Blog'}) %>

<!-- Main Content Section -->
<main class="main-content container">
  <!-- About Section -->
  <section id="about" class="section">
    <h2 class="section-title"><%= pageTitle %></h2>
    <div class="about-content">
      <p><%= aboutContent.paragraph1 %></p>
      <p><%= aboutContent.paragraph2 %></p>
    </div>
  </section>
</main>

<!-- Button to change color -->
<div class="color-toggle-container">
  <button id="colorToggleButton" class="color-toggle-button">
    Arka Plan Rengini Değiştir
  </button>
</div>

<%- include('partials/footer') %>

<!-- JavaScript to change background color -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const button = document.getElementById("colorToggleButton");
    let isLight = true;
    button.addEventListener("click", function () {
      document.body.classList.toggle("bg-color-light", isLight);
      document.body.classList.toggle("bg-color-dark", !isLight);
      isLight = !isLight;
    });
  });
</script>
