<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-xl font-semibold mb-4">Recent Posts</h3>
  <ul class="space-y-4">
    <% recentPosts.forEach(function(post) { %>
    <li>
      <a
        href="/post/<%= post.slug %>"
        class="block hover:bg-gray-50 rounded-md p-2 transition duration-150 ease-in-out"
      >
        <h4 class="text-sm font-medium text-gray-900 mb-1">
          <%= post.title %>
        </h4>
        <p class="text-xs text-gray-500">
          <%= new Date(post.createdAt).toLocaleDateString() %> â€¢ <%=
          post.readingTime %> min read
        </p>
      </a>
    </li>
    <% }); %>
  </ul>
  <a
    href="/archive"
    class="mt-4 inline-block text-sm text-blue-600 hover:text-blue-800 font-medium"
    >View all posts</a
  >
</div>
