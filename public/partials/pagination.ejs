<nav class="flex justify-center mt-8">
  <ul class="flex space-x-2">
    <% if (currentPage > 1) { %>
    <li>
      <a
        href="?page=<%= currentPage - 1 %>"
        class="px-4 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded-md"
        >Previous</a
      >
    </li>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
    <li>
      <a
        href="?page=<%= i %>"
        class="px-4 py-2 <%= i === currentPage ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %> rounded-md"
      >
        <%= i %>
      </a>
    </li>
    <% } %> <% if (currentPage < totalPages) { %>
    <li>
      <a
        href="?page=<%= currentPage + 1 %>"
        class="px-4 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded-md"
        >Next</a
      >
    </li>
    <% } %>
  </ul>
</nav>
