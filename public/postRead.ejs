<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= post.title %> - My Tech Blog</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <main class="max-w-6xl mx-auto px-4 py-6">
      <article class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <img
              class="h-10 w-10 rounded-full mr-3"
              src="<%= post.author.avatarUrl %>"
              alt="<%= post.author.name %>"
            />
            <div>
              <p class="text-sm font-medium text-gray-900">
                <%= post.author.name %>
              </p>
              <p class="text-sm text-gray-500">
                <%= new Date(post.createdAt).toLocaleDateString() %>
              </p>
            </div>
          </div>
          <h1 class="text-3xl font-bold mb-4"><%= post.title %></h1>
          <div class="text-gray-700 mb-4"><%= post.content %></div>
          <div class="flex items-center space-x-2">
            <% post.categories.forEach(function(category) { %>
            <a
              href="/category/<%= category.slug %>"
              class="px-3 py-1 bg-gray-200 text-sm text-gray-700 rounded-full hover:bg-gray-300"
            >
              <%= category.name %>
            </a>
            <% }); %>
          </div>
        </div>
      </article>
      <a href="/" class="mt-6 inline-block text-blue-600 hover:text-blue-800"
        >Back to Home</a
      >
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
