<%- include('partials/header') %>

<div class="container mt-5">
  <h1><%= post.title %></h1>
  <p class="text-muted">
    Yazar: <%= post.author %> | Tarih: <%= post.date.toLocaleDateString() %>
  </p>
  <div class="mt-4"><%= post.content %></div>
  <div class="mt-5">
    <a href="/" class="btn btn-secondary">Ana Sayfa</a>
    <% if (currentUser && currentUser.id === post.authorId) { %>
    <a href="/post/<%= post.id %>/edit" class="btn btn-primary">Düzenle</a>
    <form
      action="/post/<%= post.id %>/delete"
      method="POST"
      style="display: inline"
    >
      <button
        type="submit"
        class="btn btn-danger"
        onclick="return confirm('Bu gönderiyi silmek istediğinizden emin misiniz?')"
      >
        Sil
      </button>
    </form>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
