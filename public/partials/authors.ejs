<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-xl font-semibold mb-4">Our Authors</h3>
  <div class="space-y-6">
    <% authors.forEach(function(author) { %>
    <div class="flex items-center space-x-4">
      <img
        class="h-12 w-12 rounded-full"
        src="<%= author.avatarUrl %>"
        alt="<%= author.name %>"
      />
      <div>
        <h4 class="text-sm font-medium text-gray-900">
          <a href="/author/<%= author.slug %>" class="hover:text-blue-600"
            ><%= author.name %></a
          >
        </h4>
        <p class="text-xs text-gray-500 mb-1"><%= author.bio %></p>
        <p class="text-xs text-gray-400"><%= author.postCount %> posts</p>
      </div>
    </div>
    <% }); %>
  </div>
  <a
    href="/authors"
    class="mt-4 inline-block text-sm text-blue-600 hover:text-blue-800 font-medium"
    >View all authors</a
  >
</div>
