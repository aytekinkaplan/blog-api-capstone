<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My - Home</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="bg-color-light">
    <!-- Header Section -->
    <header class="header">
      <div class="container">
        <h1 class="logo">My Blog</h1>
        <nav class="nav">
          <a href="/" class="nav-link">Home</a>
          <a href="/blogs" class="nav-link">Blogs</a>
          <a href="/categories" class="nav-link">Categories</a>
          <a href="/about" class="nav-link">About</a>
          <a href="/contact" class="nav-link">Contact</a>
        </nav>
      </div>
    </header>

    <!-- Button to change color -->
    <div class="color-toggle-container">
      <button id="colorToggleButton" class="color-toggle-button">
        Change Background Color
      </button>
    </div>

    <!-- Main Content Section -->
    <main class="main-content container">
      <!-- Blogs Section -->
      <section id="blogs" class="section">
        <h2 class="section-title">Latest Blogs</h2>
        <div class="blog-list">
          <% blogs.forEach(function(blog) { %>
          <article class="blog-item">
            <h3 class="blog-title"><%= blog.title %></h3>
            <p class="blog-excerpt"><%= blog.content.substring(0, 150) %>...</p>
            <div class="blog-meta">
              <span class="blog-category"
                >Category: <%= blog.categoryId.name %></span
              >
              <a href="/posts/<%= blog._id %>" class="blog-read-more"
                >Read more &rarr;</a
              >
            </div>
          </article>
          <% }); %>
        </div>
      </section>

      <!-- Categories Section -->
      <section id="categories" class="section">
        <h2 class="section-title">Categories</h2>
        <div class="category-list">
          <% categories.forEach(function(category) { %>
          <a href="/categories/<%= category._id %>" class="category-item"
            ><%= category.name %></a
          >
          <% }); %>
        </div>
      </section>

      <!-- Comments Section -->
      <section id="comments" class="section">
        <h2 class="section-title">Latest Comments</h2>
        <div class="comment-list">
          <% comments.forEach(function(comment) { %>
          <div class="comment-item">
            <p class="comment-text"><%= comment.comment %></p>
            <span class="comment-blog"
              >On Blog: <%= comment.blogId.title %></span
            >
          </div>
          <% }); %>
        </div>
      </section>
    </main>

    <!-- Footer Section -->
    <footer class="footer">
      <p>&copy; 2024 Blog Management. All rights reserved.</p>
    </footer>

    <!-- JavaScript to change background color -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById("colorToggleButton");
        let isLight = true;

        button.addEventListener("click", function () {
          document.body.classList.toggle("bg-color-light", isLight);
          document.body.classList.toggle("bg-color-dark", !isLight);
          isLight = !isLight;
        });
      });
    </script>
  </body>
</html>
