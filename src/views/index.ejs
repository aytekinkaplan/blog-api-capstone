<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Management - Home</title>
    <link rel="stylesheet" href="./assets/styles/style.css" />
  </head>
  <body>
    <header>
      <h1>Welcome to Blog Management</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/blogs">Blogs</a>
        <a href="/categories">Categories</a>
      </nav>
    </header>

    <main>
      <section id="blogs">
        <h2>Latest Blogs</h2>
        <ul>
          <% blogs.forEach(function(blog) { %>
          <li>
            <h3><%= blog.title %></h3>
            <p><%= blog.content.substring(0, 100) %>...</p>
            <span>Category: <%= blog.categoryId.name %></span>
            <a href="/blogs/<%= blog._id %>">Read more</a>
          </li>
          <% }); %>
        </ul>
      </section>

      <section id="categories">
        <h2>Categories</h2>
        <ul>
          <% categories.forEach(function(category) { %>
          <li>
            <a href="/categories/<%= category._id %>"><%= category.name %></a>
          </li>
          <% }); %>
        </ul>
      </section>

      <section id="comments">
        <h2>Latest Comments</h2>
        <ul>
          <% comments.forEach(function(comment) { %>
          <li>
            <p><%= comment.comment %></p>
            <span>On Blog: <%= comment.blogId.title %></span>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>

    <footer>
      <p>&copy; 2024 Blog Management. All rights reserved.</p>
    </footer>
  </body>
</html>
