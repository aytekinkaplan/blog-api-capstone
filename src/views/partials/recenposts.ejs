<!-- views/partials/recentposts.ejs -->
<section class="recent-posts space-y-8">
  <h2 class="text-2xl font-semibold">Recent Posts</h2>
  <% if (posts.length > 0) { %>
  <ul class="space-y-4">
    <% posts.forEach(post => { %>
    <li class="bg-white p-4 rounded shadow-md">
      <h3 class="text-xl font-bold">
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
      </h3>
      <p class="text-gray-600"><%= post.excerpt %></p>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p>No recent posts available.</p>
  <% } %>
</section>
