<div class="space-y-10">
  <% posts.forEach(function(post) { %>
  <article class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="flex items-center mb-4">
        <img
          class="h-10 w-10 rounded-full mr-3"
          src="<%= post.author.avatarUrl %>"
          alt="<%= post.author.name %>"
        />
        <div>
          <p class="text-sm font-medium text-gray-900">
            <%= post.author.name %>
          </p>
          <p class="text-sm text-gray-500">
            <%= new Date(post.createdAt).toLocaleDateString() %>
          </p>
        </div>
      </div>
      <h2 class="text-2xl font-bold mb-2">
        <a
          href="/post/<%= post.slug %>"
          class="text-gray-900 hover:text-blue-600"
          ><%= post.title %></a
        >
      </h2>
      <p class="text-gray-700 mb-4"><%= post.excerpt %></p>
      <div class="flex items-center justify-between">
        <a
          href="/post/<%= post.slug %>"
          class="text-blue-600 hover:text-blue-800 font-semibold"
          >Read more</a
        >
        <div class="flex space-x-2">
          <% post.categories.forEach(function(category) { %>
          <a
            href="/category/<%= category.slug %>"
            class="px-3 py-1 bg-gray-200 text-sm text-gray-700 rounded-full hover:bg-gray-300"
          >
            <%= category.name %>
          </a>
          <% }); %>
        </div>
      </div>
    </div>
  </article>
  <% }); %>
</div>

<% if (posts.length === 0) { %>
<div class="text-center py-10">
  <h2 class="text-2xl font-bold text-gray-900">No posts found</h2>
  <p class="mt-2 text-gray-600">Check back later for new content!</p>
</div>
<% } %>
